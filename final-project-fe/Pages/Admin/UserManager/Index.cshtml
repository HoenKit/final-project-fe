@page
@model final_project_fe.Pages.Admin.UserManager.IndexModel
@{
    ViewData["ActivePage"] = "UserManager";
}
<div class="page-header">
    <h3 class="fw-bold mb-3">User Manager</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-page="/Admin/Dashboard/Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a asp-page="/Admin/UserManager/Index">User Manager</a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatables"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>Emaill</th>
                                <th>Phone</th>
                                <th>Point</th>
                                <th>Create At</th>
                                <th style="width: 20%">Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Status</th>
                                <th>Emaill</th>
                                <th>Phone</th>
                                <th>Point</th>
                                <th>Create At</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var user in Model.Users.Items)
                            {
                                <tr>
                                    <td>
                                        @if (user.IsBanned == true)
                                        {
                                            <span class="badge badge-danger"><i class="fas fa-user-alt-slash"></i> Banned</span>
                                        }
                                        else 
                                        {
                                            <span class="badge badge-success"><i class="fas fa-user-alt"></i> Active</span>
                                        }
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.Phone</td>
                                    <td>@user.Point</td>
                                    <td>@user.CreateAt</td>
                                    <td>
                                        <div class="form-button-action">
                                            <a asp-page="/Admin/UserManager/Detail" asp-route-userId="@user.UserId"
                                               class="btn btn-link btn-info"
                                               data-bs-toggle="tooltip" title="View User Detail">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a href="javascript:void(0);"
                                               class="btn btn-link @(user.IsBanned ? "btn-success" : "btn-danger")"
                                               data-bs-toggle="tooltip"
                                               data-original-title="@(user.IsBanned ? "Unban User" : "Ban User")"
                                               onclick="confirmBanUnban('@user.UserId', @(user.IsBanned.ToString().ToLower()))">
                                                <i class="@(user.IsBanned ? "fas fa-check" : "fa fa-times")"></i>
                                            </a>
                                        </div>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- Phân trang -->
                    <div class="card-body">
                        <div class="demo">
                            <ul class="pagination pg-primary">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.Users.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-page="Index" asp-route-pageNumber="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.CurrentPage == Model.Users.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
      $("#basic-datatables").DataTable({});

      $("#multi-filter-select").DataTable({
        pageLength: 5,
        initComplete: function () {
          this.api()
            .columns()
            .every(function () {
              var column = this;
              var select = $(
                '<select class="form-select"><option value=""></option></select>'
              )
                .appendTo($(column.footer()).empty())
                .on("change", function () {
                  var val = $.fn.dataTable.util.escapeRegex($(this).val());

                  column
                    .search(val ? "^" + val + "$" : "", true, false)
                    .draw();
                });

              column
                .data()
                .unique()
                .sort()
                .each(function (d, j) {
                  select.append(
                    '<option value="' + d + '">' + d + "</option>"
                  );
                });
            });
        },
      });

      // Add Row
      $("#add-row").DataTable({
        pageLength: 5,
      });

      var action =
        '<td> <div class="form-button-action"> <button type="button" data-bs-toggle="tooltip" title="" class="btn btn-link btn-primary btn-lg" data-original-title="Edit Task"> <i class="fa fa-edit"></i> </button> <button type="button" data-bs-toggle="tooltip" title="" class="btn btn-link btn-danger" data-original-title="Remove"> <i class="fa fa-times"></i> </button> </div> </td>';

      $("#addRowButton").click(function () {
        $("#add-row")
          .dataTable()
          .fnAddData([
            $("#addName").val(),
            $("#addPosition").val(),
            $("#addOffice").val(),
            action,
          ]);
        $("#addRowModal").modal("hide");
      });
    });
</script>

<script>
    function confirmBanUnban(userId, isBanned) {
        let action = isBanned ? "unban" : "ban";
        let confirmMessage = `Are you sure you want to ${action} this user?`;

        if (confirm(confirmMessage)) {
            window.location.href = `/Admin/UserManager/BanUnban?userId=${userId}`;
        }
    }
</script>
