@page
@model final_project_fe.Pages.Admin.UserManager.DetailModel
@{
    ViewData["ActivePage"] = "UserManager";
}
<div class="page-header">
    <h3 class="fw-bold mb-3">Detail</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-page="/Admin/Dashboard/Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a asp-page="/Admin/UserManager/Index">User Manager</a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a>@(Model.UserDetail.UserMetaData.FirstName ?? "N/A") @(Model.UserDetail.UserMetaData.LastName ?? "N/A")</a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body" style="display: flex; align-items: center; gap: 20px;">
                @if (Model.UserDetail != null)
                {
                    <div style="flex-basis: 30%; text-align: center;">
                        <img src="@(Model.UserDetail.UserMetaData.Avatar ?? "https://denngocson.com/wp-content/uploads/2024/10/avatar-fb-mac-dinh-62lnfy8F.jpg")" style="max-width: 100%; height: 200px;" />
                        <p>
                            @if (Model.UserDetail.IsBanned == true)
                            {
                                <span class="badge badge-danger"><i class="fas fa-user-alt-slash"></i> Banned</span>
                            }
                            else
                            {
                                <span class="badge badge-success"><i class="fas fa-user-alt"></i> Active</span>
                            }
                        </p>
                        <p><strong>Points:</strong> @Model.UserDetail.Point</p>
                    </div>
                    <div style="flex-basis: 70%;">
                        <p><strong>Full Name:</strong> @(Model.UserDetail.UserMetaData.FirstName ?? "N/A") @(Model.UserDetail.UserMetaData.LastName ?? "N/A")</p>
                        <p><strong>Email:</strong> @Model.UserDetail.Email</p>
                        <p><strong>Phone:</strong> @Model.UserDetail.Phone</p>
                        <p><strong>Created At:</strong> @Model.UserDetail.CreateAt.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><strong>Birthday:</strong> @(Model.UserDetail.UserMetaData.Birthday?.ToString("dd/MM/yyyy") ?? "0001-01-01")</p>
                        <p><strong>Gender:</strong> @Model.UserDetail.UserMetaData.Gender</p>
                        <p><strong>Address:</strong> @(Model.UserDetail.UserMetaData.Address ?? "None")</p>
                    </div>
                }
                else
                {
                    <p class="text-danger">User not found.</p>
                }
            </div>
        </div>
    </div>
</div>


<form method="post">
    <button type="submit" asp-page-handler="Back">Back</button>
</form>