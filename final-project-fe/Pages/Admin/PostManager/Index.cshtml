@page
@model final_project_fe.Pages.Admin.PostManager.IndexModel
@{
    ViewData["ActivePage"] = "PostManager";
}
<div class="page-header">
    <h3 class="fw-bold mb-3">Post Manager</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-page="/Admin/Dashboard/Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a asp-page="/Admin/PostManager/Index">Post Manager</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatables"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>PostId</th>
                                <th>Email</th>
                                <th>ParentPostId</th>
                                <th>SubCategory</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>CreateAt</th>
                                <th>UpdateAt</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>PostId</th>
                                <th>Email</th>
                                <th>ParentPostId</th>
                                <th>SubCategory</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>CreateAt</th>
                                <th>UpdateAt</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @if (!Model.Posts.Items.Any())
                            {
                                <tr>
                                    <td colspan="9" class="text-center">NULL</td>
                                </tr>
                            }
                            else
                            {
                            @foreach (var post in Model.Posts.Items)
                            {
                                <tr>
                                    <td>@post.PostId</td>
                                    <td>@post.User?.Email</td>
                                    <td>@post.ParentPostId</td>
                                    <td>@post.SubCategory?.Title</td>
                                    <td>@post.Title</td>
                                    <td>@post.Content</td>
                                    <td>@post.CreateAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@post.UpdateAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                            }
                        </tbody>
                    </table>
                    <!-- Phân trang -->
                    <div class="card-body">
                        <div class="demo">
                            <ul class="pagination pg-primary">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.Posts.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-page="Index" asp-route-pageNumber="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.CurrentPage == Model.Posts.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
      // Add Row
      $("#add-row").DataTable({
        pageLength: 5,
      });

      var action =
        '<td> <div class="form-button-action"> <button type="button" data-bs-toggle="tooltip" title="" class="btn btn-link btn-primary btn-lg" data-original-title="Edit Task"> <i class="fa fa-edit"></i> </button> <button type="button" data-bs-toggle="tooltip" title="" class="btn btn-link btn-danger" data-original-title="Remove"> <i class="fa fa-times"></i> </button> </div> </td>';

      $("#addRowButton").click(function () {
        $("#add-row")
          .dataTable()
          .fnAddData([
            $("#addName").val(),
            $("#addPosition").val(),
            $("#addOffice").val(),
            action,
          ]);
        $("#addRowModal").modal("hide");
      });
    });
</script>