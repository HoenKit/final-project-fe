@page "{id:int}"
@model final_project_fe.Pages.RegistScheduleModel
@{
    ViewData["Title"] = "Register Schedule";
}


<style>
    .page-container {
        background: #ffffff;
        min-height: 100vh;
        padding: 2rem 0;
        color: #333333;
    }
    
    .content-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .page-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 3rem;
        color: #333333;
        text-transform: uppercase;
        letter-spacing: 2px;
    }
    
    .alert-custom {
        border: none;
        border-radius: 8px;
        padding: 1rem 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }
    
    .alert-success-custom {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        color: #155724;
        border-left: 4px solid #28a745;
    }
    
    .alert-danger-custom {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        color: #721c24;
        border-left: 4px solid #dc3545;
    }
    
    .alert-info-custom {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        color: #0c5460;
        border-left: 4px solid #17a2b8;
    }
    
    .mentor-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        border: 2px solid #333333;
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 3rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        color: #333;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .mentor-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(0,0,0,0.15);
    }
    
    .mentor-card h4 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .section-title {
        font-size: 1.8rem;
        font-weight: 500;
        margin-bottom: 2rem;
        color: #333333;
        border-bottom: 3px solid #333333;
        padding-bottom: 0.5rem;
        display: inline-block;
    }
    
    .table-container {
        background: #ffffff;
        border: 2px solid #333333;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        margin-bottom: 3rem;
    }
    
    .table-custom {
        width: 100%;
        margin: 0;
        background: #ffffff;
    }
    
    .table-custom thead {
        background: #333333;
    }
    
    .table-custom thead th {
        color: #ffffff;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 1.2rem;
        border: none;
        font-size: 0.9rem;
    }
    
    .table-custom tbody td {
        padding: 1.2rem;
        border-bottom: 1px solid #e9ecef;
        color: #333;
        vertical-align: middle;
    }
    
    .table-custom tbody tr:nth-child(even) {
        background-color: #f8f9fa;
    }
    
    .table-custom tbody tr:hover {
        background-color: #e9ecef;
        transition: background-color 0.3s ease;
    }
    
    .btn-register {
        background: #333333;
        border: 2px solid #333333;
        color: #ffffff;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .btn-register:hover {
        background: #ffffff;
        color: #333333;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
    }
    
    .registered-table {
        background: #f8f9fa;
    }
    
    .registered-table thead {
        background: #666666;
    }
    
    .no-schedules-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 3rem 2rem;
        text-align: center;
        color: #6c757d;
        box-shadow: 0 8px 25px rgba(0,0,0,0.4);
    }
    
    .no-schedules-card i {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #adb5bd;
    }
    
    @@media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }
        
        .mentor-card, .table-container {
            margin-left: -1rem;
            margin-right: -1rem;
        }
        
        .table-custom {
            font-size: 0.85rem;
        }
        
        .table-custom thead th,
        .table-custom tbody td {
            padding: 0.8rem 0.5rem;
        }
    }
</style>

<div class="page-container">
    <div class="content-wrapper">
        <h1 class="page-title">Register for Schedule</h1>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-custom alert-success-custom">
                ✓ @TempData["SuccessMessage"]
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-custom alert-danger-custom">
                ⚠ @TempData["ErrorMessage"]
            </div>
        }
        
        @if (Model.Mentor != null)
        {
            <div class="mentor-card">
                <h4>👨‍🏫 Lecturer: @Model.Mentor.FirstName @Model.Mentor.LastName</h4>
            </div>
        }
        
        @if (Model.Schedules?.Count > 0)
        {
            <h4 class="section-title">Available Schedules</h4>
            <div class="table-container">
                <table class="table-custom">
                    <thead>
                        <tr>
                            <th>📚 Name of the lesson</th>
                            <th>📅 School day</th>
                            <th>⚙️ Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in Model.Schedules)
                        {
                            <tr>
                                <td><strong>@schedule.ScheduleName</strong></td>
                                <td>
                                    🕒 @schedule.MentorDay.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <form method="post" asp-page-handler="Register" style="display: inline;">
                                        <input type="hidden" name="ScheduleId" value="@schedule.ScheduleId" />
                                        <input type="hidden" name="UserId" value="@Model.CurrentUserId" />
                                        <button type="submit" class="btn-register">
                                            ➕ Register
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="no-schedules-card">
                <div style="font-size: 3rem; margin-bottom: 1rem; color: #adb5bd;">📅</div>
                <h5>No Available Schedules</h5>
                <p class="mb-0">There are currently no open schedules for this course.</p>
            </div>
        }
        
        @if (Model.RegisteredSchedules?.Count > 0)
        {
            <h4 class="section-title">Already Registered Schedules</h4>
            <div class="table-container">
                <table class="table-custom registered-table">
                    <thead>
                        <tr>
                            <th>📚 Name of the lesson</th>
                            <th>✅ School day</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in Model.RegisteredSchedules)
                        {
                            <tr>
                                <td><strong>@schedule.ScheduleName</strong></td>
                                <td>
                                    🕒 @schedule.MentorDay.ToString("dd/MM/yyyy HH:mm")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>