@page
@model final_project_fe.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Register to Winku" />
    <meta name="keywords" content="social network, register, signup" />
    <title>Register - Winku Social Network</title>
    <link rel="icon" href="images/fav.png" type="image/png" sizes="16x16">

    <link rel="stylesheet" href="css/main.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/color.css">
    <link rel="stylesheet" href="css/responsive.css">
    <style>
        .back-home {
            display: flex;
            align-items: center;
            font-size: 16px;
            color: #333;
            text-decoration: none;
            margin-bottom: 20px;
        }

            .back-home i {
                margin-right: 8px;
            }

            .back-home:hover {
                color: #007bff;
            }
    </style>
</head>

<body>
    <div class="theme-layout">
        <div class="container-fluid pdng0">
            <div class="row merged">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="land-featurearea">
                        <div class="land-meta">
                            <h1>Winku</h1>
                            <p>Winku is free to use for as long as you want with two active projects.</p>
                            <div class="friend-logo">
                                <span><img src="images/wink.png" alt="Winku Logo"></span>
                            </div>
                            <a href="#" class="folow-me">Follow Us on</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="login-reg-bg show">
                        <div class="log-reg-area reg">
                            <h2 class="log-title">Register</h2>
                            <p>Don’t use Winku Yet? <a href="#">Take the tour</a> or <a href="#">Join now</a></p>

                            <form method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <input asp-for="RegisterData.Email" type="email" required />
                                    <label class="control-label">Email</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="RegisterData.Password" type="password" required />
                                    <label class="control-label">Password</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="RegisterData.ConfirmPassword" type="password" required />
                                    <label class="control-label">Confirm Password</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="RegisterData.Phone" type="tel" required />
                                    <label class="control-label">Phone</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.Phone" class="text-danger"></span>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" /><i class="check-box"></i>Accept Terms & Conditions ?
                                    </label>
                                </div>
                                <a asp-page="/Login" title="" class="already-have">Already have an account</a>
                                <div class="submit-btns">
                                    <button class="mtr-btn signup" type="submit"><span>Register</span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/main.min.js"></script>
</body>
</html>