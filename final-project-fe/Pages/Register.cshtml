@page
@model final_project_fe.Pages.RegisterModel
@{
    ViewData["Title"] = "Phronesis - Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Register to Winku" />
    <meta name="keywords" content="social network, register, signup" />
    <title>Register - Register</title>
    <link rel="icon" type="image/x-icon" href="~/images/fav_icon.png" />
    <link rel="stylesheet" href="~/css/main.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/color.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <style>
        .circle-icon {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 40px auto 0 auto;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

            .circle-icon img {
                width: 100px;
                height: 100px;
                object-fit: contain;
            }

        .land-featurearea {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .land-meta {
            text-align: center;
        }
        .back-home {
            display: flex;
            align-items: center;
            font-size: 16px;
            color: #333;
            text-decoration: none;
            margin-bottom: 20px;
        }

            .back-home i {
                margin-right: 8px;
            }

            .back-home:hover {
                color: #007bff;
            }


        .login {
            float: left;
            height: 70vh;
            position: relative;
            width: 100%;
            transform: scale(0.8)
        }
    </style>
</head>

<body>
    <div class="theme-layout">
        <div class="container-fluid pdng0">
            <div class="row merged">
                <div class="col-lg-6">
                    <div class="land-featurearea">
                        <div class="land-meta">
                            <h1>Phronesis</h1>
                            <p>Phronesis helps you master essential soft skills to thrive in life and work.</p>
                            <div class="circle-icon">
                                <img src="/images/learning.png" alt="Learning Icon" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="login show">
                        @* <div class="log-reg-area reg"> *@
                            <h2 class="log-title">Register</h2>
                            <p>Don’t use Winku Yet? <a href="#">Take the tour</a> or <a href="#">Join now</a></p>

                            <form method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <input asp-for="RegisterData.Email" type="email" required />
                                    <label class="control-label">Email</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="RegisterData.Password" type="password" required />
                                    <label class="control-label">Password</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="RegisterData.ConfirmPassword" type="password" required />
                                    <label class="control-label">Confirm Password</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.ConfirmPassword" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <input asp-for="RegisterData.Phone" type="tel" required pattern="^\d{10,15}$" />
                                    <label class="control-label">Phone</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.Phone" class="text-danger"></span>
                                </div>

                                <!-- Metadata fields -->
                                <div class="form-group">
                                    <input asp-for="RegisterData.UserMetadataDto.FirstName" required />
                                    <label class="control-label">First Name</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.UserMetadataDto.FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="RegisterData.UserMetadataDto.LastName" required />
                                    <label class="control-label">Last Name</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.UserMetadataDto.LastName" class="text-danger"></span>
                                </div>

                            <div class="form-group">
                                <input asp-for="RegisterData.UserMetadataDto.Birthday"
                                       type="date"
                                       min="1900-01-01"
                                       max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")"
                                       required />
                                <label class="control-label">Birthday</label><i class="mtrl-select"></i>
                                <span asp-validation-for="RegisterData.UserMetadataDto.Birthday" class="text-danger"></span>
                            </div>

                                <div class="form-group">
                                    <select asp-for="RegisterData.UserMetadataDto.Gender" required>
                                        <option value="">Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <label class="control-label">Gender</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.UserMetadataDto.Gender" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="RegisterData.UserMetadataDto.Address" required />
                                    <label class="control-label">Address</label><i class="mtrl-select"></i>
                                    <span asp-validation-for="RegisterData.UserMetadataDto.Address" class="text-danger"></span>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" /><i class="check-box"></i>Accept Terms & Conditions ?
                                    </label>
                                </div>
                                <a asp-page="/Login" title="" class="already-have">Already have an account</a>
                                <div class="submit-btns">
                                    <button class="mtr-btn signup" type="submit"><span>Register</span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
@*     </div> *@

    <script src="~/js/main.min.js"></script>
</body>
</html>