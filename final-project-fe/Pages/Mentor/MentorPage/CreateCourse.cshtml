					<div class="forum-form">
							<partial name="_Notification" />
						<h5 class="f-title"><i class="ti-info-alt"></i> Create Course</h5>
							<form method="post" enctype="multipart/form-data">
								<div class="form-group">
									<input type="text" asp-for="Course.CourseName" class="form-control" required />
									<label class="control-label" asp-for="Course.CourseName">Course Name</label>
									<span asp-validation-for="Course.CourseName" class="text-danger"></span>
								</div>

								<div class="form-group">
									<select asp-for="Course.CategoryId" class="form-control">
										<option value="">-- Select Category --</option>
										@if (Model.Categories?.Items != null)
										{
											foreach (var category in Model.Categories.Items)
											{
												<option value="@category.CategoryId">@category.Title</option>
											}
										}
									</select>
									<label class="control-label" asp-for="Course.CategoryId">Category</label>
									<span asp-validation-for="Course.CategoryId" class="text-danger"></span>
								</div>


								<div class="form-group">
									<textarea asp-for="Course.CourseContent" rows="4" class="form-control" required></textarea>
									<label class="control-label" asp-for="Course.CourseContent">Description</label>
									<span asp-validation-for="Course.CourseContent" class="text-danger"></span>
								</div>

								<div class="form-group">
									<textarea asp-for="Course.SkillLearn" rows="4" class="form-control" required></textarea>
									<label class="control-label" asp-for="Course.SkillLearn">Skills Learn</label>
									<span asp-validation-for="Course.SkillLearn" class="text-danger"></span>
								</div>

								<div class="form-group">
									<input type="number" asp-for="Course.Cost" class="form-control" step="0.01" required />
									<label class="control-label" asp-for="Course.Cost">Cost</label>
									<span asp-validation-for="Course.Cost" class="text-danger"></span>
								</div>

								<div class="form-group">
									<input type="file" asp-for="Course.CoursesImage" class="form-control" />
									<label class="control-label" asp-for="Course.CoursesImage">Course Image</label>
									<span asp-validation-for="Course.CoursesImage" class="text-danger"></span>
								</div>

								<div class="form-group">
									<input type="number" asp-for="Course.CourseLength" class="form-control" step="0.1" required />
									<label class="control-label" asp-for="Course.CourseLength">Course Length (hours)</label>
									<span asp-validation-for="Course.CourseLength" class="text-danger"></span>
								</div>

								<div class="submit-btns">
									<a href="/Mentor/MentorPage/MyCourses" class="mtr-btn"><span>Cancel</span></a>
									<button type="submit" class="mtr-btn btn-primary"><span>Post Course</span></button>
								</div>
							</form>
					</div>
				</div>
