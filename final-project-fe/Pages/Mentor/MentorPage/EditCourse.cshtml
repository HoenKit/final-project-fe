@page
@model final_project_fe.Pages.Mentor.MentorPage.EditCourseModel
@{
    ViewData["Title"] = "Edit Course";
}
<div class="theme-layout">
    <section>
        <div class="ext-gap bluesh high-opacity">
            <div class="content-bg-wrap" style="background: url('@Url.Content("~/images/resources/animated-bg2.png")')"></div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="top-banner">
                            <h1>Edit Courses</h1>
                            <nav class="breadcrumb">
                                <a href="/Mentor/MentorPage/MyCourses" class="breadcrumb-item">My Courses</a>
                                <span class="breadcrumb-item active">Edit Courses</span>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- top area animated -->

    <section>
        <div class="gap100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="forum-form">
                            <partial name="_Notification" />
                            <form method="post" asp-page-handler="ToggleDeleteCourse" onsubmit="return confirm('Are you sure you want to delete (hide) this course?');">
                                <input type="hidden" name="id" value="@Model.Course.CourseId" />
                                <div class="text-end">
                                    <button type="submit" class="btn btn-danger btn-lg" style="margin-left: 80%">Delete Course</button>
                                </div>
                            </form>
                            <form method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Course.CourseId" value="@Model.Course.CourseId" />
                                <div class="form-group">
                                    <label asp-for="Course.CourseName"><strong>Course Name:</strong></label>
                                    <input asp-for="Course.CourseName" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Course.CourseContent"><strong>Description:</strong></label>
                                    <textarea asp-for="Course.CourseContent" rows="4" class="form-control" required></textarea>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Course.Cost"><strong>Cost:</strong></label>
                                    <input asp-for="Course.Cost" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Course.SkillLearn"><strong>Skills Learn:</strong></label>
                                    <textarea asp-for="Course.SkillLearn" rows="4" class="form-control" required></textarea>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Course.CourseLength"><strong>Course Length:</strong></label>
                                    <input asp-for="Course.CourseLength" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label><strong>Current Image:</strong></label><br />
                                    @if (!string.IsNullOrEmpty(Model.Course.CoursesImage))
                                    {
                                        <img src="@Model.Course.CoursesImage" alt="Course Image" style="max-width: 200px;" class="mb-2" />
                                    }
                                    else
                                    {
                                        <p class="text-muted">No image uploaded.</p>
                                    }
                                </div>

                                <div class="form-group">
                                    <label asp-for="NewImage"><strong>Upload New Image:</strong></label>
                                    <input asp-for="NewImage" type="file" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Course.CategoryId"><strong>Category:</strong></label>
                                    <select asp-for="Course.CategoryId" class="form-control">
                                        <option value="">-- Select Category --</option>
                                        @if (Model.Categories?.Items != null)
                                        {
                                            foreach (var category in Model.Categories.Items)
                                            {
                                                <option value="@category.CategoryId"
                                                        selected="@(category.CategoryId == Model.Course.CategoryId ? "selected" : null)">
                                                    @category.Title
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>

                                <p><strong>Student Count:</strong> @Model.Course.StudentCount</p>
                                <p><strong>Last Updated:</strong> @Model.Course.UpdateAt?.ToString("dd/MM/yyyy")</p>
                                <p><strong>Modules:</strong> @Model.Course.CountModule | Lessons: @Model.Course.CountLesson</p>

                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>


                            <hr />
                            <h3>Modules</h3>

                            @if (Model.Modules != null && Model.Modules.Any())
                            {
                                @foreach (var module in Model.Modules)
                                {
                                    <div class="card mb-3">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <div><strong>@module.Title</strong>: @module.CountLesson lessons</div>
                                            <div>
                                                <a asp-page="/Mentor/MentorPage/AddLesson" asp-route-moduleId="@module.ModuleId" class="btn btn-sm btn-outline-primary me-1">+ Add Lesson</a>
                                                <a asp-page="/Mentor/MentorPage/EditModule" asp-route-id="@module.ModuleId" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                                                <form method="post" asp-page-handler="DeleteModule" asp-route-id="@module.ModuleId" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this module?')">Delete</button>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="card-body">
                                            <p>@module.Description</p>
                                            <p><strong>Premium:</strong> @(module.IsPremium ? "Yes" : "No")</p>

                                            <h6>Lessons:</h6>
                                            @if (module.Lessons != null && module.Lessons.Any())
                                            {
                                                <ul class="list-group">
                                                    @foreach (var lesson in module.Lessons)
                                                    {
                                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                                            @lesson.Title
                                                            <div>
                                                                <a asp-page="/Mentor/MentorPage/EditLesson" asp-route-id="@lesson.LessonId" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                                                                <form method="post" asp-page-handler="DeleteLesson" asp-route-id="@lesson.LessonId" class="d-inline">
                                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this lesson?')">Delete</button>
                                                                </form>
                                                            </div>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No lessons available.</p>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p>No modules found.</p>
                            }

                            <a asp-page="/Mentor/MentorPage/AddModule" asp-route-courseId="@Model.Course.CourseId" class="btn btn-sm btn-outline-primary me-1">+ Add New Module</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
