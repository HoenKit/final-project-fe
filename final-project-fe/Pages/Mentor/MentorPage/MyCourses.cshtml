@page
@model final_project_fe.Pages.Mentor.MentorPage.MyCoursesModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "My Course";
    var title = Request.Query["title"];
    var categoryId = Request.Query["categoryId"];
    var sortOption = Request.Query["sortOption"];
    var userToken = HttpContextAccessor.HttpContext?.Request.Cookies["AccessToken"];
}

<div class="theme-layout">
    <section>
        <div class="ext-gap bluesh high-opacity">
            <div class="content-bg-wrap" style="background: url('@Url.Content("~/images/resources/animated-bg2.png")')"></div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="top-banner">
                            <h1>My Courses List</h1>
                            <nav class="breadcrumb">
                                <a href="/Index" class="breadcrumb-item">Home</a>
                                <span class="breadcrumb-item active">Courses</span>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- top area animated -->

    <section>
        <div class="gap gray-bg">
            <div class="container-fluid">
                <!-- Đổi container -> container-fluid -->
                <div class="row" id="page-contents">

                    <!-- Cột trái: SHORTCUTS -->
                    <div class="col-lg-3 col-md-4">
                        <aside class="sidebar static">
                            <div class="widget stick-widget">
                                <h4 class="widget-title">Shortcuts</h4>
                                <ul class="naves">
                                    <li style="display: flex;"><i class="bi bi-house"></i><a href="/Index">Home</a></li>
                                    <li style="display: flex;"><i class="bi bi-mortarboard"></i><a href="/Mentor/MentorPage/Index">Coures</a></li>
                                    @if (!string.IsNullOrEmpty(userToken))
                                    {
                                        <li style="display: flex;"><i class="bi bi-book"></i><a asp-page="./Index" asp-route-filterByUser="true">My Learning</a></li>
                                    }
                                    @if (Model.UserRoles != null && Model.UserRoles.Contains("Mentor"))
                                    {
                                        <li style="display: flex;"><i class="bi bi-mortarboard"></i><a asp-page="./MyCourses">My Courses</a></li>
                                    }
                                </ul>
                            </div>
                        </aside>
                    </div>

                    <!-- Cột phải: Nội dung -->
                    <div class="col-lg-9 col-md-8">
                        <div class="blog-sec">

                            <!-- Bộ lọc tìm kiếm -->
                            <form method="get" class="filter-form d-flex">
                                <div class="post-filter-sec d-flex justify-content-between align-items-center mb-3">

                                    <input type="text" name="title" placeholder="Search course" class="form-control" value="@Request.Query["title"]" />



                                    <div class="purify d-flex align-items-center" style="margin-left: 15px">
                                        <span class="me-2">Filter by</span>

                                        <select name="categoryId" class="form-select">
                                            <option value="" selected="@(string.IsNullOrEmpty(Request.Query["categoryId"]) ? "selected" : null)">All categories</option>
                                            @foreach (var category in Model.Categories.Items)
                                            {
                                                var selected = Request.Query["categoryId"] == category.CategoryId.ToString() ? "selected" : null;
                                                <option value="@category.CategoryId" selected="@selected">@category.Title</option>
                                            }
                                        </select>

                                        <select name="sortOption" class="form-select">
                                            @{
                                                var currentSort = Request.Query["sortOption"].ToString()?.ToLower();
                                            }
                                            <option value="">-- Sort by --</option>
                                            <option value="asc_name" selected="@(currentSort == "asc_name" ? "selected" : null)">Ascending A-Z</option>
                                            <option value="desc_name" selected="@(currentSort == "desc_name" ? "selected" : null)">Descending Z-A</option>
                                            <option value="desc_date" selected="@(currentSort == "desc_date" ? "selected" : null)">Newest (Date ↓)</option>
                                            <option value="asc_date" selected="@(currentSort == "asc_date" ? "selected" : null)">Oldest (Date ↑)</option>
                                        </select>

                                        <button type="submit" class="btn btn-primary ms-2" style="margin-left: 50px">
                                            <i class="ti-search"></i>
                                        </button>
                                    </div>


                                </div>
                            </form>
                            @if (Model.UserRoles != null && Model.UserRoles.Contains("Mentor"))
                            {
                                <partial name="_Notification" />
                                <a asp-page="/Mentor/MentorPage/CreateCourse" class="addnewforum" title="" id="add-new-btn">
                                    <i class="fa fa-plus"></i> Add New
                                </a>
                            }
                            <!-- Danh sách khóa học -->
                            <div class="row">
                                @foreach (var course in Model.Courses.Items)
                                {
                                    <div class="col-lg-4 col-sm-6 mb-4">
                                        <div class="g-post-classic">
                                            <figure>
                                                @{
                                                    var imageWithToken = string.IsNullOrEmpty(course.CoursesImage)
                                                    ? "~/images/resources/bloggrid-1.jpg"
                                                    : $"{course.CoursesImage}?{Model.SasToken}";
                                                }
                                                <img src="@imageWithToken" alt="@course.CourseName" onerror="this.src='~/images/resources/bloggrid-1.jpg'" />
                                            </figure>
                                            <div class="g-post-meta">
                                                <div class="post-title">
                                                    <h4>
                                                        <a title="@course.CourseName" href="/Mentor/MentorPage/CourseDetail?id=@course.CourseId">
                                                            @course.CourseName
                                                        </a>
                                                    </h4>
                                                    <p>@(course.CourseContent?.Length > 100 ? course.CourseContent.Substring(0, 100) + "..." : course.CourseContent)</p>
                                                    <span class="p-date">
                                                        by <a href="#">@course.Mentor.FirstName @course.Mentor.LastName</a>
                                                        - @course.CreateAt?.ToString("dd/MM/yyyy")
                                                        - @course.CourseLength hours
                                                    </span>
                                                </div>
                                                <div class="g-post-ranking">
                                                    <a title="Likes" href="#" class="likes">
                                                        <i class="fa fa-heart-o"></i> @course.StudentCount students
                                                    </a>
                                                    <a title="Cost" href="#" class="coments">
                                                        <i class="fa fa-comment-o"></i> @($"{course.Cost:C0}")
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Phân trang -->
                            @if (Model.Courses.TotalPages > 1)
                            {
                                <nav aria-label="Pagination">
                                    <ul class="pagination justify-content-center mt-4">
                                        @if (Model.Courses.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link"
                                                   href="?currentPage=@(Model.Courses.CurrentPage - 1)&title=@title&categoryId=@categoryId&sortOption=@sortOption">
                                                    Previous
                                                </a>
                                            </li>
                                        }

                                        @for (int i = 1; i <= Model.Courses.TotalPages; i++)
                                        {
                                            <li class="page-item @(i == Model.Courses.CurrentPage ? "active" : "")">
                                                <a class="page-link"
                                                   href="?currentPage=@i&title=@title&categoryId=@categoryId&sortOption=@sortOption">
                                                    @i
                                                </a>
                                            </li>
                                        }

                                        @if (Model.Courses.CurrentPage < Model.Courses.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link"
                                                   href="?currentPage=@(Model.Courses.CurrentPage + 1)&title=@title&categoryId=@categoryId&sortOption=@sortOption">
                                                    Next
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            }

                        </div>
                    </div>
                </div>

            </div>
        </div>
</div>
    </section>

</div>
<style>
    .in-progress,
    .completed {
        display: none;
    }

    #learning-toggle {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

        #learning-toggle button {
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: bold;
            border: 1px solid #ccc;
            background-color: white;
            color: black;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            #learning-toggle button.active {
                background-color: #088dcd;
                color: white;
                border: none;
            }
</style>
                    

