@page
@model final_project_fe.Pages.CreateReviewModel
@{
    ViewData["Title"] = "Phronesis - Review";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(45deg, #125d91, #111827);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 75, 162, 0.2) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            overflow: hidden;
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
            position: relative;
        }

        keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(40px) scale(0.96);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .header {
            background: linear-gradient(45deg, #125d91, #111827);
            padding: 48px 40px;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: repeating-conic-gradient(
                from 0deg at 50% 50%,
                transparent 0deg 45deg,
                rgba(255, 255, 255, 0.03) 45deg 90deg
            );
            animation: rotate 20s linear infinite;
        }

        keyframes rotate {
            to { transform: rotate(360deg); }
        }

        .header-content {
            position: relative;
            z-index: 1;
        }

        .header h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 12px;
            background: linear-gradient(45deg, #ffffff, #f0f9ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: -0.025em;
        }

        .header-icon {
            font-size: 1.5rem;
            margin-right: 12px;
            animation: sparkle 2s ease-in-out infinite;
        }

        keyframes sparkle {
            0%, 100% { transform: scale(1) rotate(0deg); }
            50% { transform: scale(1.1) rotate(180deg); }
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.95;
            font-weight: 400;
            letter-spacing: 0.01em;
        }

        .form-container {
            padding: 48px 40px;
        }

        .course-info {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            border-radius: 20px;
            padding: 32px;
            margin-bottom: 40px;
            border: 1px solid rgba(79, 70, 229, 0.1);
            position: relative;
            animation: fadeIn 1s ease-out 0.3s both;
            overflow: hidden;
        }

        .course-info::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(45deg, #125d91, #111827);
        }

        keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .course-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 8px;
            line-height: 1.3;
        }

        .course-instructor {
            font-size: 1.1rem;
            color: rgb(53 152 228);
            font-weight: 600;
            margin-bottom: 20px;
        }

        .course-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 16px;
        }

        .meta-item {
            display: flex;
            align-items: center;
            font-size: 0.95rem;
            color: #64748b;
            font-weight: 500;
        }

        .meta-item i {
            margin-right: 10px;
            color: #111827;
            width: 16px;
            text-align: center;
        }

        .tips-section {
            background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 40px;
            border-left: 6px solid #0ea5e9;
            animation: fadeIn 1s ease-out 0.5s both;
        }

        .tips-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #0c4a6e;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
        }

        .tips-title i {
            margin-right: 10px;
            color: #0ea5e9;
        }

        .tips-list {
            list-style: none;
            padding-left: 0;
        }

        .tips-list li {
            position: relative;
            padding-left: 24px;
            margin-bottom: 8px;
            color: #475569;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .tips-list li::before {
            content: '✓';
            position: absolute;
            left: 0;
            color: #0ea5e9;
            font-weight: 700;
        }

        .form-group {
            margin-bottom: 32px;
            animation: fadeIn 1s ease-out 0.7s both;
        }

        .form-label {
            display: flex;
            align-items: center;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 12px;
            font-size: 1.1rem;
            letter-spacing: -0.01em;
        }

        .form-label i {
            margin-right: 10px;
            color: #111827;
        }

        .rating-container {
            margin-bottom: 40px;
        }

        .star-rating {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
            flex-wrap: wrap;
        }

        .star {
            font-size: 3rem;
            color: #e2e8f0;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            position: relative;
            display: inline-block;
        }

        .star:hover,
        .star.active {
            color: #fbbf24;
            transform: scale(1.15) rotate(5deg);
            filter: drop-shadow(0 4px 12px rgba(251, 191, 36, 0.4));
        }

        .star:hover::after,
        .star.active::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60px;
            height: 60px;
            background: radial-gradient(circle, rgba(251, 191, 36, 0.2), transparent 70%);
            border-radius: 50%;
            z-index: -1;
            animation: starGlow 0.6s ease-out;
        }

        keyframes starGlow {
            0% { transform: translate(-50%, -50%) scale(0); opacity: 1; }
            100% { transform: translate(-50%, -50%) scale(1); opacity: 0; }
        }

        .rating-text {
            font-size: 1.2rem;
            color: #64748b;
            font-weight: 600;
            margin-left: 16px;
            transition: all 0.3s ease;
        }

        .form-control {
            width: 100%;
            padding: 18px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: #f8fafc;
            font-family: inherit;
            line-height: 1.6;
        }

        .form-control:focus {
            outline: none;
            border-color: #4f46e5;
            background: white;
            box-shadow: 
                0 0 0 4px rgba(79, 70, 229, 0.1),
                0 8px 25px rgba(0, 0, 0, 0.08);
            transform: translateY(-2px);
        }

        textarea.form-control {
            resize: vertical;
            min-height: 140px;
            font-family: inherit;
        }

        .character-count {
            text-align: right;
            font-size: 0.875rem;
            margin-top: 8px;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .btn-submit {
            background: linear-gradient(45deg, #125d91, #111827);
            color: white;
            border: none;
            padding: 18px 48px;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 16px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 12px 24px rgba(79, 70, 229, 0.3);
        }

        .btn-submit::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s;
        }

        .btn-submit:hover::before {
            left: 100%;
        }

        .btn-submit:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 20px 40px rgba(79, 70, 229, 0.4);
        }

        .btn-submit:active {
            transform: translateY(-2px) scale(0.98);
        }

        .validation-summary {
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            border: 1px solid #fca5a5;
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 24px;
            color: #dc2626;
            font-weight: 500;
        }

        .field-validation-error {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 6px;
            display: block;
            font-weight: 500;
        }

        .form-control.input-validation-error {
            border-color: #dc2626;
            background-color: #fef2f2;
        }

        /* Responsive Design */
        media (max-width: 768px) {
            body {
                padding: 12px;
            }
            
            .container {
                margin: 0;
                border-radius: 20px;
            }
            
            .header {
                padding: 32px 24px;
            }
            
            .header h1 {
                font-size: 2.2rem;
            }
            
            .form-container {
                padding: 32px 24px;
            }
            
            .course-info,
            .tips-section {
                padding: 24px;
            }
            
            .star {
                font-size: 2.4rem;
            }
            
            .course-meta {
                grid-template-columns: 1fr;
                gap: 12px;
            }
            
            .star-rating {
                justify-content: center;
            }
            
            .rating-text {
                margin-left: 0;
                margin-top: 8px;
                text-align: center;
                width: 100%;
            }
        }

        media (max-width: 480px) {
            .header h1 {
                font-size: 1.8rem;
            }
            
            .star {
                font-size: 2rem;
                gap: 4px;
            }
            
            .btn-submit {
                width: 100%;
                padding: 16px;
            }
        }

        /* Dark mode support */
        media (prefers-color-scheme: dark) {
            .container {
                background: rgba(15, 23, 42, 0.95);
                color: #f8fafc;
            }
            
            .course-info {
                background: linear-gradient(135deg, #1e293b, #334155);
                color: #f8fafc;
            }
            
            .course-title {
                color: #f8fafc;
            }
            
            .tips-section {
                background: linear-gradient(135deg, #0f172a, #1e293b);
                color: #cbd5e1;
            }
            
            .tips-title {
                color: #60a5fa;
            }
            
            .form-control {
                background: #1e293b;
                border-color: #475569;
                color: #f8fafc;
            }
            
            .form-control:focus {
                background: #334155;
                border-color: #6366f1;
            }
        }
    </style>
</head>
<body>
    <div class="container" style="margin-top: 3%; margin-bottom: 3%">
        <div class="header">
            <div class="header-content">
                <h1><i class="fas fa-star header-icon"></i>Write a Review</h1>
                <p>Share your experience and help other learners discover great courses</p>
            </div>
        </div>

        <div class="form-container">
            <div asp-validation-summary="All" class="validation-summary"></div>
            <div class="course-info">
                <div class="course-title">@Model.Course.CourseName</div>
                <div class="course-instructor">By @Model.MentorInfor.UserMetaData.FirstName @Model.MentorInfor.UserMetaData.LastName</div>
                <div class="course-meta">
                    <div class="meta-item">
                        <i class="fas fa-clock"></i>
                        <span>@Model.Course.CourseLength hours</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-play-circle"></i>
                        <span>@Model.Course.CountLesson lectures</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-users"></i>
                        <span>@Model.Course.StudentCount students</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-star"></i>
                        <span>@Model.Reviews.AverageRating (@Model.Reviews.ReviewCount reviews)</span>
                    </div>
                </div>
            </div>

            <div class="tips-section">
                <div class="tips-title">
                    <i class="fas fa-lightbulb"></i>
                    Tips for writing a helpful review
                </div>
                <ul class="tips-list">
                    <li>Be specific about what you liked or didn't like about the course content</li>
                    <li>Mention your background and experience level before taking this course</li>
                    <li>Share insights about the instructor's teaching style and communication</li>
                    <li>Describe what you accomplished or learned after completing the course</li>
                </ul>
            </div>

            <form method="post" id="reviewForm">
                <div class="form-group rating-container">
                    <label class="form-label">
                        <i class="fas fa-star"></i> Your Rating
                    </label>
                    <div class="star-rating">
                        <span class="star" data-rating="1">★</span>
                        <span class="star" data-rating="2">★</span>
                        <span class="star" data-rating="3">★</span>
                        <span class="star" data-rating="4">★</span>
                        <span class="star" data-rating="5">★</span>
                        <span class="rating-text" id="ratingText">Click to rate this course</span>
                    </div>
                    <input type="hidden" asp-for="@Model.Review.Rate" id="ratingInput" />
                    <span asp-validation-for="@Model.Review.Rate" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Review.Content" class="form-label">
                        <i class="fas fa-comment-alt"></i> Your Review
                    </label>
                    <textarea asp-for="@Model.Review.Content"
                              class="form-control" 
                              placeholder="Share your detailed thoughts about this course. What did you enjoy most? What challenges did you face? How has this course helped you? Your honest feedback helps other students make informed decisions and helps instructors improve their content."
                              maxlength="1000"
                              id="reviewContent"></textarea>
                    <div class="character-count">
                        <span id="charCount">0</span>/1000 characters
                    </div>
                    <span asp-validation-for="@Model.Review.Content" class="field-validation-error"></span>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="fas fa-paper-plane"></i> Submit Review
                </button>
            </form>
        </div>
    </div>

    <script>
        // Enhanced star rating functionality
        const stars = document.querySelectorAll('.star');
        const ratingInput = document.getElementById('ratingInput');
        const ratingText = document.getElementById('ratingText');
        const ratingTexts = ['', 'Poor - Not recommended', 'Fair - Below expectations', 'Good - Meets expectations', 'Very Good - Above expectations', 'Excellent - Highly recommended'];

        stars.forEach((star, index) => {
            star.addEventListener('click', () => {
                const rating = index + 1;
                ratingInput.value = rating;
                updateStars(rating);
                ratingText.textContent = ratingTexts[rating];
                ratingText.style.color = 'rgb(53 152 228)';
                ratingText.style.fontWeight = '700';
                
                // Add a little celebration animation
                star.style.animation = 'none';
                star.offsetHeight; // Trigger reflow
                star.style.animation = 'starGlow 0.6s ease-out';
            });

            star.addEventListener('mouseenter', () => {
                const rating = index + 1;
                updateStars(rating);
                ratingText.textContent = ratingTexts[rating];
                ratingText.style.color = 'rgb(53 152 228)';
            });
        });

        document.querySelector('.star-rating').addEventListener('mouseleave', () => {
            const currentRating = parseInt(ratingInput.value) || 0;
            updateStars(currentRating);
            if (currentRating > 0) {
                ratingText.textContent = ratingTexts[currentRating];
                ratingText.style.color = 'rgb(53 152 228)';
                ratingText.style.fontWeight = '700';
            } else {
                ratingText.textContent = 'Click to rate this course';
                ratingText.style.color = 'rgb(53 152 228)';
                ratingText.style.fontWeight = '600';
            }
        });

        function updateStars(rating) {
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('active');
                } else {
                    star.classList.remove('active');
                }
            });
        }

        // Enhanced character counter
        const reviewContent = document.getElementById('reviewContent');
        const charCount = document.getElementById('charCount');

        reviewContent.addEventListener('input', () => {
            const count = reviewContent.value.length;
            charCount.textContent = count;
            
            if (count > 950) {
                charCount.style.color = '#dc2626';
                charCount.style.fontWeight = '700';
            } else if (count > 800) {
                charCount.style.color = '#f59e0b';
                charCount.style.fontWeight = '600';
            } else {
                charCount.style.color = '#64748b';
                charCount.style.fontWeight = '500';
            }
        });

        // Enhanced form submission
        document.getElementById('reviewForm').addEventListener('submit', function(e) {
            const submitBtn = document.querySelector('.btn-submit');
            const originalText = submitBtn.innerHTML;
            
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting Review...';
            submitBtn.disabled = true;
            submitBtn.style.background = 'linear-gradient(135deg, #64748b, #94a3b8)';
            
            // Add some visual feedback
            setTimeout(() => {
                if (submitBtn.disabled) {
                    submitBtn.innerHTML = '<i class="fas fa-check"></i> Review Submitted!';
                    submitBtn.style.background = 'linear-gradient(135deg, #059669, #10b981)';
                }
            }, 2000);
        });

        // Initialize rating if there's a pre-existing value
        const existingRating = parseInt(ratingInput.value);
        if (existingRating > 0) {
            updateStars(existingRating);
            ratingText.textContent = ratingTexts[existingRating];
            ratingText.style.color = '#4f46e5';
            ratingText.style.fontWeight = '700';
        }

        // Add some interactive polish
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scrolling for any internal links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
            
            // Add focus outline for accessibility
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Tab') {
                    document.body.classList.add('user-is-tabbing');
                }
            });
            
            document.addEventListener('mousedown', function(e) {
                document.body.classList.remove('user-is-tabbing');
            });
        });
    </script>
</body>
</html>