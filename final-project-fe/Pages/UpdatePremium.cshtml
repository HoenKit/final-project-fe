@page
@model final_project_fe.Pages.UpdatePremiumModel
@{
    ViewData["Title"] = "Phronesis - Update Premium";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Buy Premium - EduPlatform</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, sans-serif;
            background: linear-gradient(135deg, #111827 0%, #125d91 100%);
            min-height: 100vh;
            background-color: #111827 !important;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            margin-top: 3%;
            margin-bottom: 7%;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .main-content {
            display: grid;
            grid-template-columns: 1fr 400px;
            gap: 40px;
        }

        .premium-form {
            background: #fff;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 50px rgba(0,0,0,0.15);
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #111827;
        }

        .plans {
            display: grid;
            grid-template-columns: repeat(2,1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .plan-option {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            cursor: pointer;
            transition: 0.3s;
            background: linear-gradient(45deg, #f9fafb, #f1f5f9);
        }

        .plan-option:hover {
            border-color: #125d91;
            transform: translateY(-3px);
        }

        .plan-option.selected {
            border-color: #125d91;
            background: linear-gradient(45deg, #125d91, #111827);
            color: white;
        }

        .plan-title {
            font-size: 1.4rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .plan-price {
            font-size: 1.2rem;
            margin-bottom: 5px;
        }

        .plan-discount {
            background: #f56565;
            color: #fff;
            font-size: 0.8rem;
            border-radius: 10px;
            padding: 4px 8px;
            display: inline-block;
        }

        .payment-methods {
            display: flex;
            justify-content: center;
        }

        .payment-method {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 20px 40px;
            text-align: center;
            cursor: pointer;
            transition: 0.3s;
            min-width: 200px;
        }

        .payment-method:hover {
            border-color: #125d91;
        }

        .payment-method.selected {
            border-color: #125d91;
            background: rgba(18,93,145,0.1);
        }

        .checkout-btn {
            width: 100%;
            background: linear-gradient(45deg, #125d91, #111827);
            color: white;
            border: none;
            padding: 18px;
            border-radius: 12px;
            font-size: 1.2rem;
            font-weight: bold;
            cursor: pointer;
            margin-top: 30px;
        }

        .sidebar {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        .account-info, .benefits {
            background: rgba(255,255,255,0.95);
            border-radius: 20px;
            padding: 30px;
            text-align: center;
        }

        .avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin: 0 auto 15px;
            object-fit: cover;
        }

        .benefit-item {
            display: flex;
            gap: 10px;
            text-align: left;
            margin-bottom: 15px;
        }

        .benefit-item i {
            color: #125d91;
        }


    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1><i class="fas fa-crown"></i> Upgrade to Premium</h1>
        <p style="opacity:0.9;">Enjoy unlimited access to exclusive content</p>
    </div>

    <div class="main-content">
        <div class="premium-form">

                <form id="premiumForm" method="post">
                    <h3 class="section-title"><i class="fas fa-gem"></i> Choose a Package</h3>
                    <div class="plans">
                        @foreach (var plan in Model.PremiumPackages)
                        {
                            <div class="plan-option" data-plan="@plan.PlanId" data-price="@plan.Price">
                                <div class="plan-title">@plan.Name</div>
                                <div class="plan-price">@plan.Price.ToString("N0") Point</div>

                                @if (plan.Name.Contains("3 Month"))
                                {
                                    <div class="plan-discount">Save 7%</div>
                                }
                                @if (plan.Name.Contains("6 Month"))
                                {
                                    <div class="plan-discount">Save 10%</div>
                                }
                            </div>
                        }
                    </div>

                    <div class="important-note">
                        <i class="fas fa-exclamation-triangle"></i>
                        Our Premium Packages are not cumulative for all cases.
                    </div>

                    <!-- Giữ lại giá trị đã chọn -->
                    <input type="hidden" id="hiddenPlan" name="PlanId" value="@(ViewData["SelectedPlanId"]?.ToString() ?? "")" />

                    <button type="submit" class="checkout-btn">
                        <i class="fas fa-shopping-cart"></i> Upgrade Now
                    </button>
                </form>
        </div>

        <div class="sidebar">
            <div class="account-info">
                <img src="@(Model.UserInfo?.UserMetaData?.Avatar ?? " images/resources/friend-avatar9.jpg")" class="avatar" />
                <h3>@Model.UserInfo?.UserMetaData?.FirstName @Model?.UserInfo?.UserMetaData?.LastName</h3>
                <p>@(Model.UserInfo.IsPremium ? "Already Premium" : "Free Member")</p>
                <p>Your Point : @((int)(Model.UserInfo?.Point ?? 0)) Point</p>
            </div>

            <div class="benefits">
                <h3 class="section-title"><i class="fas fa-gift"></i> Premium Benefits</h3>
                    <div class="benefit-item"><i class="fas fa-play-circle"></i> Access to Premium Courses</div>
                    <div class="benefit-item"><i class="fas fa-robot"></i> AI-powered course recommendation tailored to you.</div>
                    <div class="benefit-item"><i class="fas fa-user-graduate"></i> Chatting With Mentor</div>
                    <div class="benefit-item"><i class="fas fa-project-diagram"></i> Generate Course structure by AI (Mentor)</div>
            </div>
        </div>
    </div>
</div>

    <script>
        const plans = document.querySelectorAll('.plan-option');
        const hiddenPlan = document.getElementById('hiddenPlan');

        plans.forEach(p => {
            p.addEventListener('click', () => {
                plans.forEach(x => x.classList.remove('selected'));
                p.classList.add('selected');
                hiddenPlan.value = p.dataset.plan; // gán PlanId vào input hidden
            });
        });

        document.getElementById('premiumForm').addEventListener('submit', (e) => {
            if (!hiddenPlan.value) {
                e.preventDefault();
                alert("Please select a Premium plan!");
                return;
            }
        });

        const btn = e.target.querySelector('.checkout-btn');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
        btn.disabled = true;

    </script>

</body>
</html>
