@page
@model final_project_fe.Pages.GenerateCertificateModel
@{
    ViewData["Title"] = "Generate Certificate";
}

<div id="certificate">
    <div class="cert-title">CERTIFICATE OF PARTICIPATION</div>
    <div class="cert-subtitle">This certificate is proudly presented to</div>
    <div class="cert-name">@Model.UserFullName</div>
    <div class="cert-course">For successfully completing the course:</div>
    <div class="cert-course-title">@Model.CourseName</div>

    <div class="cert-footer">
        <div class="cert-org">
            <hr />
            Phronesis Learning
        </div>
        <div class="cert-mentor">
            <hr />
            @Model.MentorSignature<br />Mentor
        </div>
    </div>
</div>
<button type="button" onclick="downloadCertificate()">📄 Download Certificate</button>
<style>
    #certificate {
        width: 1123px;
        height: 794px;
        background-image: url('@Url.Content("~/images/certificate-bg.png")');
        background-size: cover;
        background-repeat: no-repeat;
        font-family: 'Georgia', serif;
        position: relative;
        margin: 0 auto;
        box-shadow: 0 0 30px rgba(0,0,0,0.3);
        padding: 60px;
        color: #fff;
    }

    .cert-title {
        font-size: 36px;
        font-weight: bold;
        color: gold;
        text-align: center;
        margin-top: 100px;
    }

    .cert-subtitle {
        text-align: center;
        font-size: 18px;
        margin-top: 20px;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .cert-name {
        font-size: 48px;
        font-weight: bold;
        color: #f8d776;
        text-align: center;
        margin-top: 40px;
    }

    .cert-course {
        font-size: 20px;
        text-align: center;
        margin-top: 20px;
    }

    .cert-course-title {
        font-size: 24px;
        text-align: center;
        font-weight: bold;
        color: #ffffff;
        margin-top: 10px;
    }

    .cert-footer {
        position: absolute;
        bottom: 80px;
        left: 60px;
        right: 60px;
        display: flex;
        justify-content: space-between;
        color: gold;
        font-size: 14px;
    }

    .cert-org, .cert-mentor {
        text-align: center;
        margin-left: 90px;
        margin-right: 200px;
    }

        .cert-org hr, .cert-mentor hr {
            width: 150px;
            border: 1px solid gold;
            margin-bottom: 5px;
        }
</style>

