@page "{id:int}"
@model final_project_fe.Pages.WorkshopDetailModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Phronesis - Workshop Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <partial name="_ConfirmDialog" />
    @Html.Partial("_Notification")
    @if (Model.Workshop == null)
    {
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="alert alert-danger shadow-sm border-0 rounded-3 text-center">
                        <i class="bi bi-exclamation-triangle-fill fs-2 mb-3 d-block"></i>
                        <h5 class="mb-2">Workshop information not found</h5>
                        <p class="mb-0 text-muted">This workshop may have been deleted or may not exist.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-light min-vh-100">
            <div class="container py-4">
                <!-- Mentor Info Banner -->
                @if (Model.CreatorMentor != null)
                {
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="mentor-banner rounded-3 p-3 shadow-sm">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <small class="opacity-75">Created by</small>
                                        <h6 class="mb-0 fw-bold text-white">Mentor: @Model.CreatorMentor.FirstName @Model.CreatorMentor.LastName</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <a asp-page="/Index" class="btn btn-outline-dark rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i>
                        Back to Home
                    </a>
                </div>

                <!-- Main Workshop Content -->
                <div class="row">
                    <div class="col-12">
                        <div class="bg-white rounded-4 shadow-lg overflow-hidden">
                            <!-- Header Section -->
                            <div class="workshop-header p-4 border-bottom">
                                <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                                    <div class="flex-grow-1">
                                        <h1 class="fw-bold mb-3 text-dark">@Model.Workshop.Decription</h1> 
                                        <div class="d-flex align-items-center text-muted">
                                            <div class="bg-light rounded-pill px-3 py-2 d-flex align-items-center">
                                                <i class="bi bi-calendar-event me-2 text-primary"></i>
                                                <span class="fw-medium">@Model.Workshop.CreateAt.ToString("dd/MM/yyyy HH:mm")</span>
                                            </div>
                                            <div class="dropdown">
                                                <button class="btn btn-sm dropdown-toggle-dots-no-border" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                                    @if (Model.IsOwner == false)
                                                    {
                                                        <li>
                                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#reportUserModal">
                                                                <i class="bi bi-person-exclamation me-2 text-danger"></i>
                                                                Report Workshop
                                                            </a>
                                                        </li>
                                                    }
                                                    @if (Model.IsOwner == true)
                                                    {
                                                        <li>
                                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#editWorkshopModal">
                                                                <i class="bi bi-pencil-square me-2"></i>
                                                                Edit
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <a class="dropdown-item text-danger delete-workshop" href="#" onclick="deleteWorkshop()">
                                                                <i class="bi bi-trash me-2"></i>
                                                                Delete
                                                            </a>
                                                            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Workshop.WorkShopId" class="d-none" id="deleteForm">
                                                                <input type="hidden" name="WorkshopId" value="@Model.Workshop.WorkShopId" />
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Video Section -->
                            <div class="p-4">
                                <div class="position-relative">
                                    <div class="ratio ratio-16x9 rounded-3 overflow-hidden shadow-sm border">
                                        <iframe src="@Model.Workshop.StreamingLink"
                                                title="Workshop Stream"
                                                allowfullscreen
                                                class="border-0">
                                        </iframe>
                                    </div>
                                    <!-- Video Overlay for Loading State -->
                                    <div class="position-absolute top-50 start-50 translate-middle d-none" id="videoLoading">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Footer Section -->
                            <div class="bg-light p-4 border-top">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center text-muted">
                                            <i class="bi bi-eye me-2"></i>
                                            <small>Watch the workshop</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6 text-md-end mt-2 mt-md-0">
                                        <div class="d-flex justify-content-md-end gap-2 flex-wrap">
                                            <span class="badge workshop-badge px-3 py-2 rounded-pill">
                                                <i class="bi bi-play-circle me-1"></i>
                                                Workshop
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enhanced Edit Workshop Modal -->
        <div class="modal fade" id="editWorkshopModal" tabindex="-1" aria-labelledby="editWorkshopModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <form method="post" asp-page-handler="Edit">
                    <div class="modal-content border-0 shadow-lg">
                        <div class="modal-header modal-header-custom border-0 rounded-top">
                            <div class="d-flex align-items-center">
                                <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
                                    <i class="bi bi-pencil-square text-white"></i>
                                </div>
                                <h5 class="modal-title mb-0 text-white" id="editWorkshopModalLabel">Edit Workshop</h5>
                            </div>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body p-4">
                            <input type="hidden" asp-for="Workshop.MentorId" />
                            <input type="hidden" asp-for="Workshop.WorkShopId" />
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark">
                                    <i class="bi bi-card-text me-2 text-primary"></i>
                                    Workshop description
                                </label>
                                <input asp-for="Workshop.Decription"
                                       class="form-control form-control-lg border-2 rounded-3"
                                       placeholder="Enter a short description for the workshop..." />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark">
                                    <i class="bi bi-link-45deg me-2 text-primary"></i>
                                    Stream Path
                                </label>
                                <input asp-for="Workshop.StreamingLink"
                                       class="form-control form-control-lg border-2 rounded-3"
                                       placeholder="https://..." />
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Enter the video stream URL or embed link
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer border-0 bg-light rounded-bottom p-4">
                            <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                                <i class="bi bi-x-lg me-2"></i>
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="bi bi-check-lg me-2"></i>
                                Save change
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Report WorkShop Modal -->
        <div class="modal fade" id="reportUserModal" tabindex="-1" aria-labelledby="reportUserModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header modal-header-report border-0 rounded-top">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
                                <i class="bi bi-exclamation-triangle-fill text-white"></i>
                            </div>
                            <h5 class="modal-title mb-0 text-white" id="reportUserModalLabel">Report Workshop</h5>
                        </div>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-page="/CreateReportPage/ReportWorkshop">
                        <input type="hidden" name="WorkShopId" value="@Model.Workshop.WorkShopId" />

                        <div class="modal-body p-4">
                            <div class="alert alert-warning border-0 rounded-3 mb-4">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-info-circle-fill text-warning me-3 mt-1"></i>
                                    <div>
                                        <h6 class="alert-heading mb-1">Important Notice</h6>
                                        <p class="mb-0 small">Please provide detailed information about the issue you found in this workshop. False reports may result in account restrictions.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="reportContent" class="form-label fw-semibold text-dark">
                                    <i class="bi bi-chat-text me-2 text-danger"></i>
                                    Report Content
                                </label>
                                <textarea id="reportContent"
                                          name="Content"
                                          class="form-control form-control-lg border-2 rounded-3"
                                          rows="8"
                                          placeholder="Please describe the issue you found in this Workshop..."
                                          required></textarea>
                                <div class="form-text">
                                    <i class="bi bi-pencil me-1"></i>
                                    Describe the problem in detail to help us understand the issue
                                </div>
                            </div>

                            <!-- Workshop Info Display -->
                            <div class="bg-light rounded-3 p-3 border-start border-danger border-4">
                                <h6 class="text-muted mb-2">
                                    <i class="bi bi-play-circle me-2"></i>
                                    Workshop Being Reported
                                </h6>
                                <p class="mb-1 fw-medium">@Model.Workshop.Decription</p>
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    Created: @Model.Workshop.CreateAt.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>

                        <div class="modal-footer border-0 bg-light rounded-bottom p-4">
                            <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                                <i class="bi bi-x-lg me-2"></i>
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="bi bi-flag-fill me-2"></i>
                                Submit Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

    <style>
        body {
            background-color: #f8f9fa;
            color: #212529;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }

        .mentor-banner {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

        .workshop-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

        .dropdown-toggle-dots-no-border {
            border: none;
            background-color: transparent;
            color: #6c757d;
            padding: 0.375rem 0.5rem;
            border-radius: 0.375rem;
        }

            .dropdown-toggle-dots-no-border:hover {
                background-color: transparent;
                color: #6c757d;
            }

            .dropdown-toggle-dots-no-border:focus {
                box-shadow: none;
                outline: none;
                background-color: transparent;
                color: #6c757d;
            }

            .dropdown-toggle-dots-no-border:active {
                background-color: transparent;
                color: #6c757d;
            }

            .dropdown-toggle-dots-no-border::after {
                display: none;
            }

        .dropdown-menu {
            border: 0;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-radius: 0.5rem;
            padding: 0.5rem 0;
            min-width: 160px;
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
            color: #495057;
            font-weight: 500;
            transition: all 0.15s ease-in-out;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
                color: #212529;
            }

            .dropdown-item i {
                width: 16px;
            }

        .btn-outline-primary {
            color: #000000;
            border-color: #000000;
            background-color: transparent;
        }

            .btn-outline-primary:hover {
                background-color: #000000;
                border-color: #000000;
                color: white;
            }

        .btn-primary {
            background-color: #000000;
            border-color: #000000;
        }

            .btn-primary:hover {
                background-color: #000000;
                border-color: #000000;
            }

        .text-primary {
            color: #000000 !important;
        }

        .btn-outline-dark {
            color: #212529;
            border-color: #212529;
            background-color: transparent;
        }

            .btn-outline-dark:hover {
                background-color: #212529;
                border-color: #212529;
                color: white;
            }

        .btn-outline-danger {
            color: #dc3545;
            border-color: #dc3545;
            background-color: transparent;
        }

            .btn-outline-danger:hover {
                background-color: #dc3545;
                border-color: #dc3545;
                color: white;
            }

        .form-control {
            border: 2px solid #dee2e6;
            color: #212529;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
            }

        .form-label {
            color: #212529;
            font-weight: 600;
        }

        .workshop-badge {
            background-color: #0d6efd;
            color: white;
        }

        .modal-header-custom {
            background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
        }

        .modal-title {
            color: white;
        }

        .btn-close-white {
            filter: brightness(0) invert(1);
        }

        iframe {
            border-radius: 0.5rem;
            width: 100%;
            height: 100%;
        }

        .shadow-lg {
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
        }

        .rounded-4 {
            border-radius: 1rem !important;
        }

        .overflow-hidden {
            overflow: hidden !important;
        }

        .min-vh-100 {
            min-height: 100vh !important;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c2c7;
            color: #842029;
        }

        .text-muted {
            color: #6c757d !important;
        }

        .modal-header-report {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .alert-warning {
            background-color: #fff3cd;
            color: #856404;
        }

        .border-start {
            border-left: 4px solid #dc3545 !important;
        }

        .form-select {
            border: 2px solid #dee2e6;
            color: #212529;
        }

            .form-select:focus {
                border-color: #dc3545;
                box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.15);
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        /* Enhanced form controls for report modal */
        #reportUserModal .form-control:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.15);
        }

        #reportUserModal .form-text {
            color: #6c757d;
            font-size: 0.875em;
        }

        /* Animation for modal */
        .modal.fade .modal-dialog {
            transition: transform 0.3s ease-out;
            transform: translate(0, -50px);
        }

        .modal.show .modal-dialog {
            transform: none;
        }

        /* Custom scrollbar for textarea */
        #reportContent::-webkit-scrollbar {
            width: 8px;
        }

        #reportContent::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        #reportContent::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 4px;
        }

            #reportContent::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function deleteWorkshop() {
            showConfirm({
                type: 'danger',
                title: 'Delete Workshop',
                message: 'Are you sure you want to delete this workshop? This action cannot be undone.',
                confirmText: 'Delete',
                cancelText: 'Cancel',
                onConfirm: () => {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
</body>
</html>