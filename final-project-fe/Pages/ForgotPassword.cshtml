@page
@model final_project_fe.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Phronesis - Forgot Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/images/fav_icon.png" />
    <link rel="stylesheet" href="css/main.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/color.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>
<body>
    <div class="theme-layout">
        <div class="container-fluid pdng0">
            <div class="row merged">
                <div class="col-lg-6">
                    <div class="land-featurearea">
                        <div class="land-meta">
                            <h1>Phronesis</h1>
                            <p>Phronesis helps you master essential soft skills to thrive in life and work.</p>
                            <div class="circle-icon">
                                <img src="~/images/learning.png" alt="Learning Icon" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="login-reg-bg">
                        <div class="log-reg-area sign">
                            <a asp-page="/Index" class="back-home"><i class="fa fa-arrow-left"></i> Back To Home</a>
                            <h2 class="log-title">Forgot Password</h2>
                            <p>Please enter your email to receive password reset instructions.</p>

                            <form method="post">
                                <div class="form-group">
                                    <input asp-for="Email" type="email" required />
                                    <label class="control-label">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="submit-btns">
                                    <button class="mtr-btn signin" type="submit"><span>Send Reset Link</span></button>
                                    <button class="mtr-btn signup" type="button" onclick="window.location.href='@Url.Page("/Login")'"><span>Back to Login</span></button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <style>
        .circle-icon {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 40px auto 0 auto;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

            .circle-icon img {
                width: 100px;
                height: 100px;
                object-fit: contain;
            }

        .land-featurearea {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .land-meta {
            text-align: center;
        }
    </style>
    <script src="js/main.min.js"></script>
    <script src="js/script.js"></script>
</body>
</html>